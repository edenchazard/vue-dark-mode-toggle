{
  "name": "@edenchazard/vue-rise-and-shine",
  "version": "2.0.0",
  "license": "MIT",
  "private": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/vue-rise-and-shine.css"
  },
  "files": [
    "dist"
  ],
  "description": "A light and dark mode toggle component for Vue 3 with a simple composable. Watch the sun and moon rise as you switch between light and dark modes.",
  "keywords": [
    "sun",
    "moon",
    "vue",
    "dark",
    "mode",
    "toggle",
    "component",
    "composable",
    "typescript"
  ],
  "homepage": "https://github.com/edenchazard/vue-rise-and-shine",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edenchazard/vue-rise-and-shine.git"
  },
  "bugs": {
    "url": "https://github.com/edenchazard/vue-rise-and-shine/issues"
  },
  "author": {
    "name": "Eden Chazard",
    "url": "https://www.npmjs.com/~edenchazard"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "docs:build": "vite build --mode=docs",
    "test:unit": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "fmt": "prettier . --check",
    "fmt:fix": "prettier --write .",
    "ts:check": "vue-tsc --noEmit"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "happy-dom": "^18.0.1",
    "highlight.js": "^11.11.1",
    "lightningcss": "^1.30.1",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.10",
    "vue3-code-block": "^2.2.14"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.2.4"
  }
}
